{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": ["es6", "dom"],
        "forceConsistentCasingInFileNames": false
    },
    "exclude": ["node_modules", "dist", ".git"],
    "include": ["./src/**/*"]
}
